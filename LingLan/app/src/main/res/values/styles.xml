<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>

        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>


    <style name="title_text_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">14</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="subject_text_style">
        <item name="android:textColor">#666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">14</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="more_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/main_more_text_color</item>
    </style>
    <style name="project_detail_item_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp12</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dp12</item>
    </style>

    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="main_title_bar_style">
        <item name="android:background">@drawable/bg_titlebar_main</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp44</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp38</item>
    </style>

    <style name="subscribe_my_tip_text">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subscribe_tip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">@dimen/dp14</item>
        <item name="android:layout_marginBottom">@dimen/dp14</item>
    </style>

    <style name="subscribe_more_tip_text" parent="@style/subscribe_my_tip_text">
        <item name="android:textSize">@dimen/sp12</item>
    </style>
    <style name="detail_back_view" parent="@style/back_view">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:drawableLeft">@drawable/btn_back_detail</item>
    </style>

    <style name="back_view" parent="@style/title_bar_button">
        <item name="android:gravity">right|center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingLeft">@dimen/dp12</item>
        <item name="android:paddingRight">@dimen/dp0</item>
        <item name="android:layout_marginLeft">@dimen/dp0</item>
        <item name="android:layout_marginRight">@dimen/dp0</item>
        <item name="android:minHeight">@dimen/dp44</item>
        <item name="android:text">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:drawablePadding">@dimen/dp0</item>
    </style>

    <style name="title_bar_button" parent="@style/common_button">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/btn_common_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/dp16</item>
        <item name="android:paddingRight">@dimen/dp16</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="common_button" parent="@style/text_on_button">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:paddingLeft">@dimen/dp6</item>
        <item name="android:paddingRight">@dimen/dp6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dp50</item>
        <item name="android:minHeight">@dimen/dp30</item>
    </style>

    <style name="text_on_button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/more_in</item>
        <item name="android:windowExitAnimation">@anim/more_out</item>
    </style>

    <style name="me_ImageView_arrow_right">
        <item name="android:layout_width">@dimen/dp16</item>
        <item name="android:layout_height">@dimen/dp16</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/me_arrow_right</item>
    </style>

    <style name="ExpandableItemStyleHeader">
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_margin">@dimen/dp4</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:background">@drawable/item_brown</item>
    </style>

</resources>
