<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="@dimen/dp16"
    android:paddingLeft="@dimen/dp16"
    android:paddingTop="@dimen/dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_homepage_subject_logo"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp68"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_homepage_subject_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_homepage_subject_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:singleLine="true"
                android:text="简介"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_homepage_subject_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="日期"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp12" />

        </LinearLayout>
    </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/px1"
    android:layout_marginTop="@dimen/dp10"
    android:background="#cccccc" />

</LinearLayout>