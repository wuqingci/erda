<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp16"
    android:paddingBottom="@dimen/dp16"
    android:orientation="vertical">

    <com.android.linglan.widget.imageview.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp56"
        android:layout_height="@dimen/dp56"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@drawable/avatar_default"
        android:scaleType="centerCrop"
        app:riv_border_width="@dimen/dp0"
        app:riv_corner_radius="45dip"
        app:riv_mutate_background="false"
        app:riv_oval="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp18"
        android:layout_toRightOf="@id/avatar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="王超"
                android:textSize="@dimen/sp16"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已关注"
                android:textSize="@dimen/sp16"
                android:textColor="#999999"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:text="个人简介"
            android:textSize="@dimen/sp14"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t\t职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师，职业中医师职业中医师"
            android:textSize="@dimen/sp14"
            android:textColor="#666666"/>

    </LinearLayout>
</RelativeLayout>