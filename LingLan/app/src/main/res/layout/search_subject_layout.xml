<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_search_subject"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp10"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_no_history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp16"
            android:paddingLeft="@dimen/dp16"
            android:text="专题"
            android:textColor="#999999"
            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/view_no_div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_below="@+id/tv_history_search"
            android:layout_marginTop="@dimen/dp6"
            android:background="#cccccc" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_subject"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more_search_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp16"
        android:paddingBottom="@dimen/dp12"
        android:paddingTop="@dimen/dp12"
        android:drawableLeft="@drawable/search_more"
        android:drawablePadding="@dimen/dp6"
        android:text="更多专题"
        android:background="@drawable/bg_bottom_textview"
        android:textColor="@color/carminum"
        android:textSize="@dimen/sp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_below="@+id/tv_history_search"
        android:background="#cccccc" />

</LinearLayout>
