<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/page_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/followed_update"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最近更新"
            android:textSize="@dimen/sp14"
            android:textColor="@color/carminum"/>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical_gray" />

        <TextView
            android:id="@+id/followed_author"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="作者"
            android:textSize="@dimen/sp14"
            android:textColor="@color/no_text_color_fragment_title"/>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical_gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/followed_team"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="团队"
            android:textSize="@dimen/sp14"
            android:textColor="@color/no_text_color_fragment_title"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#999999" />


    <FrameLayout
        android:id="@+id/followed_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>
