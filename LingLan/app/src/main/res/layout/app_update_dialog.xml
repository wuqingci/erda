<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/dp288"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:clickable="false"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dialog_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp42"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center"
                android:singleLine="true"
                android:text="检查更新"
                android:textColor="@color/carminum"
                android:textSize="@dimen/sp18" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px1"
                android:layout_alignParentBottom="true"
                android:background="#d7d7d7" >
            </View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/dialog_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp80"
                android:padding="@dimen/dp0" >

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp10"
                    android:scrollbars="none" >

                    <TextView
                        android:id="@+id/dialog_body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:layout_marginTop="5dp"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/sp16" />
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dialog_foot"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp50"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/dialog_cancel"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_bg"
                    android:gravity="center"
                    android:text="以后再说"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16" >
                </Button>

                <Button
                    android:id="@+id/dialog_enter"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_bg"
                    android:gravity="center"
                    android:text="立即更新"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>